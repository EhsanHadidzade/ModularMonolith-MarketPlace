@using AccountManagement.Application.Contract.UserCooperationRequest
@model List<UserRequestedForCooperationViewModel>

@{
    ViewData["Title"] = "مدیریت درخواست های همکاری کاربران";
}

<div class="row page-titles mx-0">
    <div class="col-sm-6 p-md-0">
        <div class="welcome-text">
            <h4>سلام، خوش آمدید</h4>
        </div>
    </div>
    <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/administrator">پنل مدیریت </a></li>
            <li class="breadcrumb-item active"><a href=""> مدیریت درخواست های همکاری کاربران </a></li>
        </ol>
    </div>
</div>


<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">لیست کاربرانی که درخواست همکاری داده اند </h4>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-responsive-sm">
                        <thead>
                            <tr>
                                <th>نام و نام خانوادگی</th>
                                <th>تاریخ درخواست </th>
                                <th>وضعیت</th>
                                <th>عملیات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td>@user.FullName</td>
                                    <td>@user.CreationDate</td>
                                    <td>
                                        @if(user.IsRecognizedByAdmin)
                                        {
                                            <span class="badge light badge-success">بررسی شده توسط ادمین </span>
                                        }
                                        else
                                        {
                                            <span class="badge light badge-warning">در انتظار بررسی </span>
                                        }
                                    </td>
                                    <td>
                                        <div class="d-flex">
                                            <a href="#showModal=/administrator/UserCooperationRequest/ShowAndSetRequestedPersonalities/@user.UserId" class="btn btn-primary shadow btn-xs sharp mr-1"><i class="fa fa-pencil"></i></a>
                                            @*<a href="#showModal=/administrator/UserCooperationRequest/ShowConfirmedUserPersonalities/@user.UserId" class="btn btn-outline-primary ">نمایش آخرین بروز رسانی </a>*@
                                            <a href="#" class="btn btn-danger shadow btn-xs sharp"><i class="fa fa-trash"></i></a>
                                        </div>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>