@{
    ViewData["Title"] = "مدیریت گالری فروشندگان";
}

<!-- Chartist -->
<link rel="stylesheet" href="/AdminTheme/vendor/chartist/css/chartist.min.css">

<div class="row page-titles mx-0">
    <div class="col-sm-6 p-md-0">
        <div class="welcome-text">
            <h4>سلام، خوش آمدید</h4>
        </div>
    </div>
    <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/administrator">پنل مدیریت </a></li>
            <li class="breadcrumb-item active"><a href=""> مدیریت گالری فروشندگان </a></li>
        </ol>
    </div>
</div>



<div class="row">

    <div class="col-xl-4 col-lg-12 col-sm-12">
        <div class="card">
            <div class="card-header border-0 pb-0">
                <h2 class="card-title">درباره من</h2>
            </div>
            <div class="card-body text-center">
                <div class="ico-sparkline">
                    <div id="sparkline12"><canvas width="100" height="100" style="display: inline-block; width: 100px; height: 100px; vertical-align: top;"></canvas></div>
                </div>
                <br />
                <a href="/sellerproductmedia/ShowSellerMedia" class="btn btn-outline-info">مشاهده گالری</a>
            </div>
            <div class="card-footer pt-0 pb-0 text-center">
                <div class="row">
                    <div class="col-4 pt-3 pb-3 border-right">
                        <h3 class="mb-1 text-primary">150</h3>
                        <span>پروژه</span>
                    </div>
                    <div class="col-4 pt-3 pb-3 border-right">
                        <h3 class="mb-1 text-primary">140</h3>
                        <span>آپلود ها</span>
                    </div>
                    <div class="col-4 pt-3 pb-3">
                        <h3 class="mb-1 text-primary">45</h3>
                        <span>کار ها</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts{
<!-- Chart sparkline plugin files -->
<script src="/AdminTheme/vendor/jquery-sparkline/jquery.sparkline.min.js"></script>
<script src="/AdminTheme/js/plugins-init/sparkline-init.js"></script>

if(jQuery('#sparkline12').length > 0 ){
    //Pie
    $("#sparkline12").sparkline([80, 61, 51], {
        type: "pie",
        height: "100",
        resize: !0,
        sliceColors: ["rgba(179, 204, 255, 1)", "rgba(157, 189, 255, 1)", "rgba(112, 153, 237, 1)"]
    });
}	
}

