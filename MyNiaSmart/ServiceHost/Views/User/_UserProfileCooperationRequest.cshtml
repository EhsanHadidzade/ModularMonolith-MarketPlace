@using AccountManagement.Application.Contract.PersonalityType
@model List<PersonalityTypeViewModel>

<style>
    .coopBtn {
    
    }
</style>

<div id="CooperationRequest" class="tab-pane fade">
    <form method="post" action="/user/CooperationRequest">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">شخصیت مورد نظرتان جهت همکاری با ما را انتخاب نمایید </h4>
                    </div>
                    <div class="card-body">
                        <div class="basic-list-group">
                            <div class="row">
                                <div class="col-lg-6 col-xl-2">
                                    <div class="list-group mb-4 " id="list-tab" role="tablist">
                                        @foreach (var personalityType in Model)
                                        {
                                            <a class="list-group-item list-group-item-action  @((Model.IndexOf(personalityType)==0)? "active":"")" id="list-@personalityType.Id-list" data-toggle="list" href="#list-@personalityType.Id" role="tab">@personalityType.Title</a>
                                        }
                                    </div>
                                </div>
                                <div class="col-lg-6 col-xl-10">


                                    <div class="tab-content" id="nav-tabContent">
                                        @foreach (var personalityType in Model)
                                        {
                                            <div class="tab-pane fade @((Model.IndexOf(personalityType)==0)? "active show":"") " id="list-@personalityType.Id">
                                                @foreach (var personality in personalityType.Personalities)
                                                {
                                                    <div class="form-check mb-8" style="padding:5px">
                                                        <input type="checkbox" class="form-check-input" id="check1" name="PersonalityList" value="@personality.Id">
                                                        <label class="form-check-label" for="check1"> @personality.Title</label>
                                                    </div>
                                                }
                                            </div>
                                        }
                                    </div>

                                </div>

                            </div>
                           <center> <button type="submit" class="btn btn-rounded btn-outline-primary coopBtn">ارسال درخواست</button></center>  
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>

</div>








