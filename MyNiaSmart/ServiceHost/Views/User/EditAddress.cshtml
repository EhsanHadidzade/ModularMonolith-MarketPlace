@model AccountManagement.Application.Contract.UserAddress.EditUserAddress
@{
    ViewData["Title"] = "افزودن آدرس جدید";
}

<div class="row">
    <div class="col-xl-12 col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">فرم افقی</h4>
            </div>
            <div class="card-body">
                <div class="basic-form">
                    <form method="post" action="/User/EditAddress">

                        <div class="form-row">
                            <div class="col-lg-12 mb-2">
                                <div class="form-group">
                                    <div class="ir-select">
                                        <label class="text-label"> استان</label>
                                        <select class="ir-province form-control" asp-for="Capital"></select>

                                        <label class="text-label"> شهر</label>
                                        <select class="ir-city form-control" asp-for="City"></select>

                                    </div>
                                </div>
                            </div>
                            <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
                            <script src="~/MainTheme/js/IranCities/ir-city-select.js"></script>
                            <div class="form-group col-md-12">
                                <label>آدرس</label>
                                <input type="text" class="form-control" placeholder="آدرس" asp-for="Address">
                            </div>
                            <div class="form-group col-md-6">
                                <label>پلاک</label>
                                <input type="text" class="form-control" asp-for="PlaqueNumber">
                            </div>
                            <div class="form-group col-md-6">
                                <label>کدپستی</label>
                                <input type="text" class="form-control" asp-for="PostalCode">
                            </div>
                            <div class="form-group col-md-6">
                                <label>شماره همراه</label>
                                <input type="text" class="form-control" asp-for="MobileNumber">
                            </div>
                        </div>
                        <input type="hidden" value="@Model.Id" asp-for="Id" />
                        <button type="submit" class="btn btn-primary">اعملال تغییرات</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
