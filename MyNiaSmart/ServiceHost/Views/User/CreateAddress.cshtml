@model AccountManagement.Application.Contract.UserAddress.CreateUserAddress
@{
    ViewData["Title"] = "افزودن آدرس جدید";
}

<div class="row">
    <div class="col-xl-12 col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">فرم افقی</h4>
            </div>
            <div class="card-body">
                <div class="basic-form">
                    <form method="post" action="/User/CreateAddress">

                        <div class="form-row">
                            <div class="col-lg-12 mb-2">
                                @*   <div class="form-group">
                                    <div class="ir-select">
                                    <label class="text-label"> استان</label>
                                    <select class="ir-province form-control"></select>

                                    <label class="text-label"> شهر</label>
                                    <select class="ir-city form-control"></select>

                                    </div>
                                    </div>*@
                            </div>
                            <div class="form-group col-md-12">
                                <label>استان</label>
                                <input type="text" class="form-control" placeholder="آدرس" asp-for="Capital">
                                <span class="text-danger" asp-validation-for="Capital"></span>
                            </div>
                            <div class="form-group col-md-12">
                                <label>شهر</label>
                                <input type="text" class="form-control" asp-for="City">
                                <span class="text-danger" asp-validation-for="City"></span>
                            </div>
                            @*  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

                                <script src="~/MainTheme/js/IranCities/ir-city-select.js"></script>*@


                            <div class="form-group col-md-12">
                                <label>آدرس</label>
                                <input type="text" class="form-control" placeholder="آدرس" asp-for="Address">
                                <span class="text-danger" asp-validation-for="Address"></span>
                            </div>
                            <div class="form-group col-md-6">
                                <label>پلاک</label>
                                <input type="text" class="form-control" asp-for="PlaqueNumber">
                                <span class="text-danger" asp-validation-for="PlaqueNumber"></span>
                            </div>
                            <div class="form-group col-md-6">
                                <label>کدپستی</label>
                                <input type="text" class="form-control" asp-for="PostalCode">
                                <span class="text-danger" asp-validation-for="PostalCode"></span>
                            </div>
                            <div class="form-group col-md-6">
                                <label>شماره همراه</label>
                                <input type="text" class="form-control" asp-for="MobileNumber">
                                <span class="text-danger" asp-validation-for="MobileNumber"></span>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary">افزودن</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


