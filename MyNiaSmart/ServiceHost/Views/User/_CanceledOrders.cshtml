@using _0_Framework.Utilities;
@model List<ShopManagement.Application.Contract.Order.OrderViewModel>



<div class="row">

    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-sm mb-0">
                        <thead>
                            <tr>
                                <th class="align-middle">کد رهگیری</th>
                                <th class="align-middle pr-7">تاریخ پرداخت </th>
                                <th class="align-middle pr-7">تاریخ کنسل شدن فاکتور </th>
                                <th class="align-middle" style="min-width: 12.5rem;"> مبلغ</th>
                                <th class="no-sort">مشاهده جرئیات </th>
                            </tr>
                        </thead>
                        <tbody id="orders">
                              @if(Model.Count==0)
                            {
                                <tr>
                                    <td></td>
                                    <td></td>
                                    <td>موردی یافت نشد</td>
                                    <td></td>
                                </tr>
                            }
                            @foreach (var order in Model)
                            {
                                <tr class="btn-reveal-trigger">

                                    <td class="py-2">
                                        <a href="#">
                                            <strong>#@order.IssueTrackingNo</strong>
                                        </a>
                                    </td>
                                    <td class="py-2">@order.PaymentDate</td>
                                    <td class="py-2">@order.CancelDate</td>
                                    <td class="py-2">
                                        @order.TotalAmount.ToMoney() تومان
                                    </td>
                                    <td class="py-2 text-right">
                                        <a href="#showModal=/User/ShowOrderItems/@order.Id" class="btn btn-outline-success">کلیک کنید</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>