                                                            <ul class="list-group list-group-flush">
                                                                @foreach (var userRole in _userRoleApplication.GetUserRolesByUserId(Model.Id))
                                                                {
                                                                    <li class="list-group-item d-flex px-0 justify-content-between">
                                                                        <strong>@userRole.Name</strong>
                                                                    </li>
                                                                }
                                                            </ul>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>*@
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }

    </div>

