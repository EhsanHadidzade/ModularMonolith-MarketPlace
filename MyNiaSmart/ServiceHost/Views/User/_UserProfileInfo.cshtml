                                                                        <strong>@requestedRole.Name</strong>
                                                                        @if (!acceptedRoleIds.Any(x => x == requestedRole.Id))
                                                                        {
                                                                            <a class="btn btn-outline-danger">تایید نشده</a>

                                                                        }
                                                                        else
                                                                        {
                                                                            if(requestedRole.Id==21)
                                                                            {
                                                                            <a href="#showmodal=/user/CreateSellerPanel" class="btn btn-outline-success">تکمیل فرم درخواست پنل فروشنده</a>
                                                                            }
                                                                        }
                                                                    </li>
                                                                }
                                                            </ul>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
