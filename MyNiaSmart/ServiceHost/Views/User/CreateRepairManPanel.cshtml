@model RepairWorkShopManagement.Application.Contracts.RepainManPanel.CreateRepairManPanel


<div class="row">
    <div class="col-xl-12 col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">فرم درخواست پنل تعمیرات</h4>
            </div>
            <div class="card-body">
                <div class="basic-form">
                    <form method="post" action="/user/CreateRepairManPanel">
                        <div class="form-row">
                            <div class="form-group col-md-12" id="illegaluser">
                                <label>نام تجاری</label>
                                <input type="text" class="form-control" asp-for="CommericalFullName" placeholder="نام تجاری درخواست کننده">
                                <span class="text-danger" asp-validation-for="CommericalFullName"></span>
                            </div>
                            <div class="form-group col-md-12">
                                <label>شماره همراه برای فروشگاه</label>
                                <input type="text" onkeypress="return onlyNumberKey(event)" maxlength="11" class="form-control" asp-for="MobileNumber" placeholder="شماره">
                                <span class="text-danger" asp-validation-for="MobileNumber">
                                </span>
                            </div>
                            <div class="col-lg-12 mb-2">
                                <div class="form-group">
                                    <div class="ir-select">
                                        <label class="text-label"> استان</label>
                                        <select class="ir-province form-control" asp-for="Capital"></select>
                                        <span class="text-danger" asp-validation-for="Capital">
                                        </span>

                                        <label class="text-label"> شهر</label>
                                        <select class="ir-city form-control" asp-for="City"></select>
                                        <span class="text-danger" asp-validation-for="City">
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group col-md-12">
                                <label>آدرس</label>
                                <input type="text" class="form-control" asp-for="Address" placeholder="آدرس">
                                <span class="text-danger" asp-validation-for="Address">
                                </span>
                            </div>
                            <div class="form-group col-md-6">
                                <label>انتخاب نوع گارانتی سرویس ارائه شده</label>
                                <select class="form-control" asp-for="WarrantyTypeId">
                                    <option value="0">انتخاب کنید</option>
                                    <option value="1"> ساعت</option>
                                    <option value="2"> روز</option>
                                    <option value="3"> ماه</option>
                                    <option value="4"> سال</option>
                                </select>
                                <span class="text-danger" asp-validation-for="WarrantyTypeId">
                                </span>
                            </div>
                            <div class="form-group col-md-6">
                                <label>مقدار گارانتی</label>
                                <input type="number" class="form-control" asp-for="WarrantyAmount" onkeypress="return onlyNumberKey(event)">
                                <span class="text-danger" asp-validation-for="WarrantyAmount">
                                </span>
                            </div>
                            <div class="form-group col-md-12">
                                <div class="custom-control custom-switch custom-control-inline mb-1">
                                    <input type="checkbox" class="custom-control-input" id="customSwitch1" asp-for="CanMarketerSee">
                                    <label class="custom-control-label mr-1" for="customSwitch1">
                                    </label>
                                    <span>من مایلم خدمات من بازار یابی شوند</span>
                                </div>
                            </div>

                            <div class="form-group col-md-12" dir="rtl">
                                <label> توضیحات</label>
                                <textarea class="form-control" id="BodyContent" rows="15" asp-for="ShortResume">

                                </textarea>
                                <span class="text-danger" asp-validation-for="ShortResume">
                                </span>
                            </div>

                            <button type="submit" class="btn btn-primary">ارسال درخواست</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@*<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>*@
<script src="~/MainTheme/js/IranCities/ir-city-select.js"></script>

<script>

     function onlyNumberKey(evt) {

        // Only ASCII character in that range allowed
        var ASCIICode = (evt.which) ? evt.which : evt.keyCode
        if (ASCIICode > 31 && (ASCIICode < 48 || ASCIICode > 57))
            return false;
        return true;
    }
</script>




