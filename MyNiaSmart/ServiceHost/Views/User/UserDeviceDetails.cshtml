    $(document).ready(function(){
           debugger
           geocoding();
       })
</script>
    }

<script>


    function SelectThis(id){
        $.ajax({
            url:"/User/SelectDevice/",
            data:{deviceId:id},
            dataType:'json',
            success:function(result){
                debugger
                $("#deviceTitle").val(result.FarsiTitle);
                $("#ProductId").val(id);

            }
        })

    }
</script>




















