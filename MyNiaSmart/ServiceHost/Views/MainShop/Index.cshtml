@model List<ShopManagement.Application.Contract.Product.MainShopProductViewModel>
@using _0_Framework.Utilities
@{
    ViewData["Title"] = "نمایش محصولات";
}


<div class="row page-titles mx-0">
    <div class="col-sm-6 p-md-0">
        <div class="welcome-text">
            <h4>سلام، خوش آمدید</h4>
            <p class="mb-0">نمایش محصولات</p>
        </div>
    </div>
    <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">پنل ها </a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)">نمایش محصولات </a></li>
        </ol>
    </div>
</div>

<div class="row">
    
    @foreach (var product in Model)
    {
        if(product.IsSellingBetweenSellers)
        {
               <div class="col-lg-12 col-xl-6">
            <div class="card">
                <div class="card-body">
                    <div class="row m-b-30">
                        <div class="col-md-5 col-xxl-12">
                            <div class="new-arrival-product mb-4 mb-xxl-4 mb-md-0">
                                <div class="new-arrivals-img-contnent">
                                    <a href="/mainshop/productDetails/@product.Slug"><img class="img-fluid" src="/UploadedFiles/@product.Picture" alt="" title=""></a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-7 col-xxl-12">
                            <div class="new-arrival-content position-relative">
                                <h4>@product.FarsiTitle</h4>
                                <h6>@product.EngTitle</h6>
                                <p class="price">از @product.MinValuePrice تومان</p>
                                <p>دسترسی:
                                   <span class="item"> در حال فروش <i class="fa fa-check-circle text-success"></i></span>
                                </p>
                                <p>ضمانت :
                                    @if(product.MaxValueWarrantyTypeId==WarrantyTypeId.Hour)
                                    {
                                        <span class="item"> تا @product.MaxValueWarrantyAmount ساعت</span>
                                    }
                                       @if(product.MaxValueWarrantyTypeId==WarrantyTypeId.Day)
                                    {
                                        <span class="item"> تا @product.MaxValueWarrantyAmount روز</span>
                                    }
                                       @if(product.MaxValueWarrantyTypeId==WarrantyTypeId.Mounth)
                                    {
                                        <span class="item"> تا @product.MaxValueWarrantyAmount ماه</span>
                                    }
                                       @if(product.MaxValueWarrantyTypeId==WarrantyTypeId.Year)
                                    {
                                        <span class="item"> تا @product.MaxValueWarrantyAmount سال</span>
                                    }

                                </p>
                                @*<p>برند: <span class="item">لی</span></p>*@
                                <p class="text-content">
                                   @Html.Raw(product.Description) ....
                                </p>
                                <div class="comment-review star-rating text-right">
                                    <ul>
                                        <li><i class="fa fa-star"></i></li>
                                        <li><i class="fa fa-star"></i></li>
                                        <li><i class="fa fa-star"></i></li>
                                        <li><i class="fa fa-star-half-empty"></i></li>
                                        <li><i class="fa fa-star-half-empty"></i></li>
                                    </ul>
                                    <span class="review-text">(34 نظر ) / </span><a class="product-review" href="#">نظری دارید؟</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            </div>
        }
        else
        {
              <div class="col-lg-12 col-xl-6">
            <div class="card">
                <div class="card-body">
                    <div class="row m-b-30">
                        <div class="col-md-5 col-xxl-12">
                            <div class="new-arrival-product mb-4 mb-xxl-4 mb-md-0">
                                <div class="new-arrivals-img-contnent">
                                    <img class="img-fluid" src="/UploadedFiles/@product.Picture" alt="">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-7 col-xxl-12">
                            <div class="new-arrival-content position-relative">
                                <h4>@product.FarsiTitle</h4>
                                <h6>@product.EngTitle</h6>
                                @*<p class="price">از @product.MinValuePrice تومان</p>*@
                                <p>دسترسی:
                               <span class="item text-danger"> در مرحله فروش نیست <i class="fa fa-Cross-circle"></i></span>
                                </p>
                            @*    <p>ضمانت :
                                    @if(product.MaxValueWarrantyTypeId==WarrantyTypeId.Hour)
                                    {
                                        <span class="item"> تا @product.MaxValueWarrantyAmount ساعت</span>
                                    }
                                       @if(product.MaxValueWarrantyTypeId==WarrantyTypeId.Day)
                                    {
                                        <span class="item"> تا @product.MaxValueWarrantyAmount روز</span>
                                    }
                                       @if(product.MaxValueWarrantyTypeId==WarrantyTypeId.Mounth)
                                    {
                                        <span class="item"> تا @product.MaxValueWarrantyAmount ماه</span>
                                    }
                                       @if(product.MaxValueWarrantyTypeId==WarrantyTypeId.Year)
                                    {
                                        <span class="item"> تا @product.MaxValueWarrantyAmount سال</span>
                                    }

                                </p>*@
                                <p class="text-content">
                                   @Html.Raw(product.Description) ....
                                </p>
                                <div class="comment-review star-rating text-right">
                                    <ul>
                                        <li><i class="fa fa-star"></i></li>
                                        <li><i class="fa fa-star"></i></li>
                                        <li><i class="fa fa-star"></i></li>
                                        <li><i class="fa fa-star-half-empty"></i></li>
                                        <li><i class="fa fa-star-half-empty"></i></li>
                                    </ul>
                                    <span class="review-text">(34 نظر ) / </span><a class="product-review" href="#">نظری دارید؟</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        }

    }
</div>


