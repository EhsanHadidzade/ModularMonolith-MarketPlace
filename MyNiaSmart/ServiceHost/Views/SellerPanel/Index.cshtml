@model List<ShopManagement.Application.Contract.SellerProduct.SellerProductViewModel>
@{
    ViewData["Title"] = "پنل فروشندگی";
}

<div class="row page-titles mx-0">
    <div class="col-sm-6 p-md-0">
        <div class="welcome-text">
            <h4>سلام، خوش آمدید</h4>
            <p class="mb-0">پنل فروشندگی</p>
        </div>
    </div>
    <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">پنل ها </a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)">پنل فروشندگی </a></li>
        </ol>
    </div>
</div>

<div class="row page-titles mx-0 ">
    <div class="col-sm-6 p-md-0">
        <div class="welcome-text">
            <h4>سلام، خوش آمدید</h4>
            <p class="mb-0">پنل فروشندگی</p>
        </div>
    </div>
</div>

@if (ViewData["message"] != null)
{
    <div class="alert alert-info alert-dismissible fade show">
        <svg viewBox="0 0 24 24" width="24" height="24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round" class="mr-2">
            <circle cx="12" cy="12" r="10"></circle>
            <line x1="12" y1="16" x2="12" y2="12"></line>
            <line x1="12" y1="8" x2="12.01" y2="8"></line>
        </svg>
        <strong>اطلاعات!</strong>
        @ViewData["message"];
    </div>
}

<div clas="row">
    <center>
        <a href="/SellerPanel/AddProductToSellerPanel" class="btn btn-square btn-outline-primary" style="width:1000px">افزودن محصول جدید</a>
    </center>
</div>
<br />
<div class="row">
    @if (Model.Count == 0)
    {
        <div class="alert-danger">
            <p>محصولی برای نمایش وجود ندارد</p>
        </div>
    }
    @foreach (var sellerProduct in Model)
    {
        <div class="col-xl-4 col-lg-6 col-md-4 col-sm-6">
            <div class="card">
                <div class="card-body">
                    <div class="new-arrival-product">
                        <div class="new-arrivals-img-contnent">
                            <img class="img-fluid" src="/UploadedFiles/@sellerProduct.PictureUrl" alt="">
                        </div>
                        <div class="new-arrival-content text-center mt-3">
                            <h4>@sellerProduct.ProductTitle</h4>
                            <ul class="star-rating">
                                <li><i class="fa fa-star"></i></li>
                                <li><i class="fa fa-star"></i></li>
                                <li><i class="fa fa-star"></i></li>
                                <li><i class="fa fa-star-half-empty"></i></li>
                                <li><i class="fa fa-star-half-empty"></i></li>
                            </ul>
                            <span class="price">@sellerProduct.Price تومان</span>
                        </div>
                            <a class="btn btn-square btn-outline-info" style="width:45%" href="/sellerpanel/EditProduct/@sellerProduct.Id">ویرایش</a>
                            <a class="btn btn-square btn-outline-danger" style="width:45%" href="/sellerpanel/EditProduct/@sellerProduct.Id">حذف</a>
                    </div>
                </div>
            </div>
        </div>
    }


</div>