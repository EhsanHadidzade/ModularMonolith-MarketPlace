@model List<AccountManagement.Application.Contract.UserAddress.UserAddressViewModel>






<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">لیست  محصولات سازمان</h4>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <ul class="timeline">
                        @foreach (var item in Model)
                        {
                            <li>
                                <div class="timeline-panel">
                                    <div class="media mr-2">
                                        <img alt="image" width="50" src="/maintheme/images/avatar/4.jpg">
                                    </div>
                                    <div class="media-body">
                                        <h5 class="mb-1">@item.Address</h5>
                                        <label class="d-block">استان :@item.Capital -شهر :@item.City </label>
                                        <label class="d-block">کد پستی :@item.PostalCode  </label>
                                        <label class="d-block">شماره همراه :@item.MobileNumber </label>
                                         <a onclick="SelectAddress(@item.Id)"  class="btn btn-primary btn-lg light sharp" >
                                             انتخاب
                                        </a>
                                    </div>
                                 
                                </div>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function SelectAddress(addressId){
        $.ajax({
            url:"/Order/SelectAddress",
            data:{id:addressId},
            dataType:'json',
            success:function(result){
                debugger
                $("#UserAddressId").val(result.Id);
                $("#UserAddressText").val(result.Address);
                $("#deliveryDuration").text()
                $("#MainModal").modal("hide");
                
            }
        })
    }
</script>